[program:celery_firmware_upgrader]
user={{ www_user }}
directory={{ openwisp2_path }}
command={{ openwisp2_path }}/env/bin/celery -A openwisp2 worker -l info --queues firmware_upgrader -O {{ openwisp2_celery_firmware_upgrader_optimization }}{% if openwisp2_celery_firmware_upgrader_concurrency %} --concurrency={{ openwisp2_celery_firmware_upgrader_concurrency }}{% elif openwisp2_celery_firmware_upgrader_autoscale %} --autoscale {{ openwisp2_celery_firmware_upgrader_autoscale }}{% endif %}{% if openwisp2_celery_firmware_upgrader_prefetch_multiplier %} --prefetch-multiplier {{ openwisp2_celery_firmware_upgrader_prefetch_multiplier }}{% endif %} -n firmware_upgrader@%%h
autostart=true
autorestart=true
stopsignal=INT
redirect_stderr=true
stdout_logfile={{ openwisp2_path }}/log/celery-firmware-upgrader.log
stdout_logfile_maxbytes=30MB
stdout_logfile_backups=5

[uwsgi]
chdir={{ openwisp2_path }}
uid=www-data
module=openwisp2.wsgi:application
master=True
pidfile={{ openwisp2_path }}/uwsgi.pid
socket=127.0.0.1:3031
processes=2
threads=2
harakiri=20
max-requests=5000
vacuum=True
enable-threads=True
env=HTTPS=on
buffer-size=8192
{% if openwisp2_uwsgi_gid %}
gid={{ openwisp2_uwsgi_gid }}
{% endif %}
